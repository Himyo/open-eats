<%- include('../templates/header', {
    hideNavbar: true
}) %>

<div class="flex justify-center mt-20 mb-20 pl-4 pr-4">
    <div class="flex flex-col w-security">
        <a href="/" class="self-center"><img src="/images/open-eats.svg" height="32" alt="logo"></a>
        <h1 class="text-2xl mt-10 mb-4">Ravis de vous revoir</h1>
        <% if (typeof (message) !== 'undefined') { %>
            <div class="mb-4 p-4
            <% if(type === 'error') { %> bg-red-200 border-l-4 border-red-500 text-red-700 <% } %>
            <% if(type === 'success') { %> bg-green-200 border-l-4 border-green-500 text-green-700 <% } %>
            "><%= message %></div>
        <% } %>
        <form action="/connexion" method="POST">
            <div class="flex flex-col">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="w-full items-center border border-1 border-gray-400 p-3">
            </div>
            <div class="flex flex-col mt-4">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="w-full items-center border border-1 border-gray-400 p-3">
            </div>
            <input type="submit" id="submit-sign-in" value="Connexion" class="mt-4 w-full p-3 bg-green-600 cursor-pointer hover:bg-green-700 text-white font-bold">
        </form>
        <div class="mt-8 text-center">
            Vous découvrez Open Eats ? 
            <a href="/inscription" class="text-green-uber">Créer un compte</a></div>
    </div>
    
</div>

<%- include('./_footer') %>

