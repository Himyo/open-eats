        <li data-status="granted" class="notifications bg-gray-200 hover:bg-gray-300 py-2 px-4 block rounded-t whitespace-no-wrap flex items-center cursor-pointer">
          <img src="/images/notifications_active.svg" class="pointer-events-none mr-2">
          <span class="pointer-events-none">Toutes</span>
        </li>
        <li data-status="default" class="notifications bg-gray-200 hover:bg-gray-300 py-2 px-4 block whitespace-no-wrap flex items-center cursor-pointer">
