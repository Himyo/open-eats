    <div class="dropdown inline-block relative ">
      <button class="bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded inline-flex items-center">
        <span class="mr-0 md:mr-1">
          <div class="text-sm mr-6 flex items-center">
            <% if (session.photoURL) { %>
            <img src="<%= session.photoURL %>" alt="avatar" class="h-10 w-10 mr-3 rounded-full">
            <% } else { %>
            <img src="/images/avatar-guest@2x.png" alt="avatar" class="h-10 w-10 mr-3 rounded-full">
            <% } %>
            <span class="text-green-700 hidden md:block"><%= session.email %></span>
          </div>
        </span>
        <svg class="fill-current h-4 w-4 mt-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /> </svg>
