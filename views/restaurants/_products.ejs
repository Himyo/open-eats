<section>
    <h2 class="text-2xl mb-3">Produits</h2>
    <%- include('./_ordered') %>
    <div class="flex lg:flex-row flex-col flex-wrap restaurants">
        <% products.forEach(product => { %>
            <div class="w-full xl:w-1/3 xl:pr-3 pt-3">
                <div class="product flex items-start w-full justify-between border border-gray-400 hover:border-black cursor-pointer"
                    <% if (session) { %> data-status="<%= bookmarks[product.id] %>" <% } %>
                    data-restaurant-id="<%= restaurant.id %>" data-product-id="<%= product.id %>" data-selected="false" data-name="<%= product.data().title %>" data-price="<%= product.data().price %>">
                    <div class="flex flex-col p-3">
                        <span class="pb-1 text-lg flex items-center"><%= product.data().title %>
                            <% if (session) { %>
                                <% if (bookmarks[product.id]) { %>
                                    <img class="bookmark ml-2" src="/images/star-checked.svg" alt="checked-star">
                                <% } else { %>
                                    <img class="bookmark ml-2" src="/images/star.svg" alt="star">
                                <% } %>
                            <% } %>
                        </span>
                        <span class="text-gray-700 text-base pb-1 trailing-dots"><%= product.data().description %></span>
                        <span class="text-gray-700 text-base font-bold"><%= product.data().price.toFixed(2) %>â‚¬</span>
                    </div>
                    <div class="flex flex-shrink-0 h-40 w-40">
                        <img src="/images/placeholder.png" data-src="<%=product.data().image %>" class="lazy object-cover h-40 w-40" alt="placeholder">
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>