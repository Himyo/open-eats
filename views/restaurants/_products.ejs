<section>
    <h2 class="text-2xl mb-4">Produits</h2>
    <div class="flex items-start w-full justify-between xl:w-1/3 border border-gray-400 hover:border-black cursor-pointer">
        <% products.forEach(product => { %>
            <div class="flex flex-col p-3">
                <span class="pb-1 text-lg"><%= product.data().title %></span>
                <span class="text-gray-700 text-base pb-1 trailing-dots"><%= product.data().description %></span>
                <span class="text-gray-700 text-base font-bold"><%= product.data().price %>â‚¬</span>
            </div>
            <div class="flex flex-shrink-0 h-40 w-40"><img src="<%=product.data().image %>" class="object-cover h-40 w-40"></div>
        <% }); %>
    </div>
</section>